<ContentPage 
    x:Class="ExcelClone.Views.HelpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:locales="clr-namespace:ExcelClone.Resources.Localization"
    Title="{x:Static locales:AppResources.ApplicationName}">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <VerticalStackLayout Grid.Row="0">
              <Grid ColumnDefinitions="*,Auto" Padding="2" HorizontalOptions="Fill">
                     <Label Text="{x:Static locales:AppResources.HelpPage}" 
                            FontSize="24" 
                            HorizontalOptions="Center" />

                     <ActivityIndicator x:Name="LoadingIndicator"
                                          IsRunning="False"
                                          IsVisible="False"
                                          WidthRequest="30"
                                          HeightRequest="30"
                                          HorizontalOptions="End"
                                          VerticalOptions="Center"/>
              </Grid>

            <Button Text="{x:Static locales:AppResources.HomePage}"
                    Clicked="OnHomePageClicked"
                    Margin="5,10"
                    BackgroundColor="#217346"
                    TextColor="White"/>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="16">
                <Grid ColumnDefinitions="2*,8*" ColumnSpacing="30">
                    <Label Grid.Column="0"
                           Text="{x:Static locales:AppResources.Info}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                    <Label Grid.Column="1" 
                           Text="{x:Static locales:AppResources.InfoText}"
                           HorizontalTextAlignment="Start" />
                </Grid>

                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>

                <Grid ColumnDefinitions="2*,8*" ColumnSpacing="30">
                    <Label Grid.Column="0"
                           Text="{x:Static locales:AppResources.Usage}"
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                    <Label Grid.Column="1" 
                           Text="{x:Static locales:AppResources.UsageText}"
                           HorizontalTextAlignment="Start" />
                </Grid>

                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>

                <Grid ColumnDefinitions="2*,8*" ColumnSpacing="30">
                    <Label Grid.Column="0"
                           Text="{x:Static locales:AppResources.Functions}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                    <Label Grid.Column="1" 
                           Text="{x:Static locales:AppResources.FunctionsText}"
                           HorizontalTextAlignment="Start" />
                </Grid>

                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>

                <Grid ColumnDefinitions="2*,8*" ColumnSpacing="30">
                    <Label Grid.Column="0"
                           Text="{x:Static locales:AppResources.InfixFunctions}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                    <Label Grid.Column="1" 
                           Text="{x:Static locales:AppResources.InfixFunctionsText}"
                           HorizontalTextAlignment="Start" />
                </Grid>

                <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill"/>

                <Grid ColumnDefinitions="2*,8*" ColumnSpacing="30">
                    <Label Grid.Column="0"
                           Text="{x:Static locales:AppResources.PrefixFunctions}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                    <Label Grid.Column="1" 
                           Text="{x:Static locales:AppResources.PrefixFunctionsText}"
                           HorizontalTextAlignment="Start" />
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
